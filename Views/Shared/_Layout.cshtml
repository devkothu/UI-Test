<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShortURL</title>
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="topbar">
        <div class="container topbar-content">
            <h1 class="brand">ShortURL</h1>
            <button id="themeToggle" class="btn btn-secondary" type="button">Toggle Theme</button>
        </div>
    </header>

    <main class="container content">
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
