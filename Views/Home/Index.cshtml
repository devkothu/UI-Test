@model IReadOnlyCollection<ShortUrlEntry>
@{
    ViewData["Title"] = "URL Shortener";
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<section class="card hero">
    <div class="hero-grid">
        <div>
            <h2>Create a secure short URL</h2>
            <p>Simple, modern, and responsive URL shortener with QR image download support.</p>
        </div>
        <form asp-action="Create" method="post" class="shorten-form">
            <input name="Url" type="url" placeholder="https://example.com/my/very/long/url" required />
            <button type="submit" class="btn">Shorten</button>
        </form>
    </div>

    @if (TempData["CreatedShortUrl"] is string shortUrl)
    {
        <div class="result generated-result" data-created-url="@shortUrl">
            <span class="result-label">Generated short URL</span>
            <a href="@shortUrl" target="_blank" rel="noreferrer">@shortUrl</a>
            <div class="result-actions">
                <button type="button" class="btn btn-secondary download-qr-btn" data-qr-url="@shortUrl">Download QR</button>
            </div>
            <img class="qr-thumb qr-thumb-large" src="https://api.qrserver.com/v1/create-qr-code/?size=220x220&data=@Uri.EscapeDataString(shortUrl)" alt="QR code for @shortUrl" />
        </div>
    }
</section>

<section class="card">
    <div class="section-header">
        <h3>Recent URLs</h3>
    </div>
    <div class="table-wrap">
        <table>
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Short URL</th>
                    <th>Original URL</th>
                    <th>Created</th>
                    <th>Download QR</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                var itemShortUrl = $"{baseUrl}/s/{item.Code}";
                <tr>
                    <td><code>@item.Code</code></td>
                    <td class="url short-url"><a href="@itemShortUrl" target="_blank" rel="noreferrer">@itemShortUrl</a></td>
                    <td class="url"><a href="@item.OriginalUrl" target="_blank" rel="noreferrer">@item.OriginalUrl</a></td>
                    <td>@item.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button type="button" class="btn btn-secondary download-qr-btn" data-qr-url="@item.OriginalUrl">Download</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</section>
