@model IReadOnlyCollection<ShortUrlEntry>
@{
    ViewData["Title"] = "URL Shortener";
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<section class="hero card">
    <div class="hero-intro">
        <p class="eyebrow">Fast links, cleaner sharing</p>
        <h2>Redesigned URL dashboard</h2>
        <p>Create short links in seconds, copy instantly, and manage every URL from a responsive workspace.</p>
    </div>

    <div class="hero-panels">
        <form asp-action="Create" method="post" class="shorten-form panel">
            <label for="urlInput">Paste your long URL</label>
            <input id="urlInput" name="Url" type="url" placeholder="https://example.com/my/very/long/url" required />
            <button type="submit" class="btn">Create short URL</button>
        </form>

        <div class="panel panel-stats">
            <h3>Quick overview</h3>
            <div class="stats-grid">
                <article>
                    <span>Total Links</span>
                    <strong>@Model.Count</strong>
                </article>
                <article>
                    <span>Theme Support</span>
                    <strong>Dark / Light</strong>
                </article>
                <article>
                    <span>QR Export</span>
                    <strong>Enabled</strong>
                </article>
            </div>
        </div>
    </div>

    @if (TempData["CreatedShortUrl"] is string shortUrl)
    {
        <div class="result generated-result" data-created-url="@shortUrl">
            <div class="result-header">
                <div class="result-title-wrap">
                    <span class="result-label">Generated short URL</span>
                    <button type="button" class="btn btn-secondary result-toggle-btn" data-generated-toggle aria-expanded="true">Unexpand</button>
                </div>
                <span class="result-status">Ready to share</span>
            </div>
            <div class="generated-result-content" data-generated-content>
                <div class="generated-url-row">
                    <a href="@shortUrl" target="_blank" rel="noreferrer">@shortUrl</a>
                    <button type="button" class="btn btn-secondary copy-url-btn" data-copy-url="@shortUrl">Copy URL</button>
                </div>
                <div class="result-actions">
                    <button type="button" class="btn btn-secondary download-qr-btn" data-qr-url="@shortUrl">Download QR</button>
                </div>
                <img class="qr-thumb qr-thumb-large" src="https://api.qrserver.com/v1/create-qr-code/?size=220x220&data=@Uri.EscapeDataString(shortUrl)" alt="QR code for @shortUrl" />
            </div>
        </div>
    }
</section>

<section class="card table-card">
    <div class="section-header">
        <h3>Recent URLs</h3>
        <p class="section-sub">Responsive table layout for desktop and mobile.</p>
    </div>
    <div class="table-wrap">
        <table id="recentUrlsTable" data-page-size="5">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Short URL</th>
                    <th>Original URL</th>
                    <th>Created</th>
                    <th>QR</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                var itemShortUrl = $"{baseUrl}/s/{item.Code}";
                <tr>
                    <td data-label="Code"><code>@item.Code</code></td>
                    <td data-label="Short URL" class="url short-url"><a href="@itemShortUrl" target="_blank" rel="noreferrer">@itemShortUrl</a></td>
                    <td data-label="Original URL" class="url"><a href="@item.OriginalUrl" target="_blank" rel="noreferrer">@item.OriginalUrl</a></td>
                    <td data-label="Created">@item.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td data-label="QR">
                        <button type="button" class="btn btn-secondary download-qr-btn" data-qr-url="@item.OriginalUrl">Download</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <div class="table-pagination" id="recentUrlsPagination" aria-label="Recent URLs pagination" hidden>
        <button type="button" class="btn btn-secondary" data-pagination-action="prev">Previous</button>
        <span class="pagination-status" data-pagination-status>Page 1 of 1</span>
        <button type="button" class="btn btn-secondary" data-pagination-action="next">Next</button>
    </div>
</section>
